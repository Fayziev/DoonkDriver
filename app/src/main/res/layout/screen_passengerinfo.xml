<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bacckground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bacckground">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/nextBt"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="15dp"
            android:padding="4dp"
            android:src="@drawable/ic_car_add_back"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar" />


        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger Information"
            android:textColor="@color/realWhite"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar" />


        <ImageView
            android:id="@+id/nameBg"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:background="@drawable/drawable_back"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />


        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:text="MURODJON TURSUNOV"
            android:textColor="@color/realBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/nameBg"
            app:layout_constraintLeft_toLeftOf="@id/nameBg"
            app:layout_constraintRight_toLeftOf="@id/clientInformation"
            app:layout_constraintTop_toTopOf="@id/nameBg" />


        <TextView
            android:id="@+id/clientInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:text="Client information"
            android:textColor="#2C2E81"
            app:layout_constraintBottom_toBottomOf="@id/nameBg"
            app:layout_constraintRight_toRightOf="@id/nameBg"
            app:layout_constraintTop_toTopOf="@id/nameBg" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_back"
            app:layout_constraintTop_toBottomOf="@id/nameBg" />


        <ImageView
            android:id="@+id/addressBg"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_back"
            app:layout_constraintTop_toBottomOf="@id/nameBg" />


        <TextView
            android:id="@+id/addressText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:text="@string/address"
            android:textColor="@color/realBlack"
            app:layout_constraintLeft_toLeftOf="@id/addressBg"
            app:layout_constraintTop_toTopOf="@id/addressBg" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:text="@string/navigateMap"
            android:textColor="@color/realBlack"
            app:layout_constraintRight_toRightOf="@id/addressBg"
            app:layout_constraintTop_toTopOf="@id/addressBg" />

        <ImageView
            android:id="@+id/firstCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:src="@drawable/ic_circle"
            app:layout_constraintLeft_toLeftOf="@id/addressText"
            app:layout_constraintTop_toBottomOf="@id/addressText" />

        <TextView
            android:id="@+id/nameAndPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:text="Муроджон +998994364615"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/firstCircle"
            app:layout_constraintLeft_toRightOf="@id/firstCircle"
            app:layout_constraintTop_toTopOf="@id/firstCircle" />

        <TextView
            android:id="@+id/nameApSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:text="Курашбой +998994364615"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/secondCircle"
            app:layout_constraintLeft_toRightOf="@id/secondCircle"
            app:layout_constraintTop_toTopOf="@id/secondCircle" />


        <TextView
            android:id="@+id/desciptionFirstCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="25dp"
            android:text="Ташкент Международный автовокзал,
улица Бунедкор, дом 7, строение 1"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/firstCircle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstCircle" />


        <TextView
            android:id="@+id/desciptionSecondCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="25dp"
            android:text="Ташкент Международный автовокзал,
улица Бунедкор, дом 7, строение 1"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/firstCircle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondCircle" />

        <ImageView
            android:id="@+id/secondCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:src="@drawable/ic_circle"
            app:layout_constraintLeft_toLeftOf="@id/addressText"
            app:layout_constraintTop_toBottomOf="@id/desciptionFirstCircle" />


        <ImageView
            android:id="@+id/clientBg"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_back"
            app:layout_constraintBottom_toTopOf="@id/parcelDetalisBg"
            app:layout_constraintTop_toBottomOf="@id/addressBg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3px"
            android:layout_marginHorizontal="4dp"
            android:background="@color/view_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/countText" />

        <TextView
            android:id="@+id/clientInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="CLIENT INFORMATION"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/clientBg"
            app:layout_constraintLeft_toLeftOf="@id/clientBg"
            app:layout_constraintTop_toTopOf="@id/clientBg"
            app:layout_constraintVertical_bias=".15" />

        <TextView
            android:id="@+id/countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Count"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/clientInfoText"
            app:layout_constraintTop_toBottomOf="@id/clientInfoText" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/animal"
            app:layout_constraintRight_toRightOf="@id/animal"
            app:layout_constraintTop_toBottomOf="@id/clientInfoText" />

        <ImageView
            android:id="@+id/parcelDetalisBg"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_back"
            app:layout_constraintTop_toBottomOf="@id/clientBg" />

        <TextView
            android:id="@+id/parcelDetalis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:text="PASSENGER DETAILS"
            android:textColor="#4A4A4A"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/parcelDetalisBg" />

        <TextView
            android:id="@+id/animalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Animal"
            android:textColor="@color/realBlack"
            app:layout_constraintLeft_toLeftOf="@id/parcelDetalis"
            app:layout_constraintTop_toBottomOf="@id/parcelDetalis" />

        <TextView
            android:id="@+id/animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Yes"
            android:textColor="@color/realBlack"
            app:layout_constraintBottom_toBottomOf="@id/animalText"
            app:layout_constraintRight_toRightOf="@id/parcelDetalisBg"
            app:layout_constraintTop_toTopOf="@id/animalText" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3px"
            android:layout_marginHorizontal="4dp"
            android:background="@color/view_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/animal" />


        <TextView
            android:id="@+id/luggageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Luggage"
            android:textColor="@color/realBlack"
            app:layout_constraintLeft_toLeftOf="@id/parcelDetalis"
            app:layout_constraintTop_toBottomOf="@id/animalText" />

        <TextView
            android:id="@+id/luggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/realBlack"
            app:layout_constraintBottom_toBottomOf="@id/luggageText"
            app:layout_constraintLeft_toLeftOf="@id/animal"
            app:layout_constraintTop_toTopOf="@id/luggageText" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3px"
            android:layout_marginHorizontal="4dp"
            android:background="@color/view_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/luggage" />

        <TextView
            android:id="@+id/canSmokeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Can Smoke"
            android:textColor="@color/realBlack"
            app:layout_constraintLeft_toLeftOf="@id/parcelDetalis"
            app:layout_constraintTop_toBottomOf="@id/luggageText" />

        <TextView
            android:id="@+id/canSmoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/realBlack"
            app:layout_constraintBottom_toBottomOf="@id/canSmokeText"
            app:layout_constraintLeft_toLeftOf="@id/animal"
            app:layout_constraintTop_toTopOf="@id/canSmokeText" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3px"
            android:layout_marginHorizontal="4dp"
            android:background="@color/view_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/canSmoke" />


        <TextView
            android:id="@+id/trailerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Trailer"
            android:textColor="@color/realBlack"
            app:layout_constraintLeft_toLeftOf="@id/parcelDetalis"
            app:layout_constraintTop_toBottomOf="@id/canSmokeText" />

        <TextView
            android:id="@+id/trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/realBlack"
            app:layout_constraintBottom_toBottomOf="@id/trailerText"
            app:layout_constraintLeft_toLeftOf="@id/animal"
            app:layout_constraintTop_toTopOf="@id/trailerText" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3px"
            android:layout_marginHorizontal="4dp"
            android:background="@color/view_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/trailer" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>