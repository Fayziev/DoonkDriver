<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/car"
        android:layout_width="50dp"
        android:layout_marginTop="8dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/circle_gray_bg"
        android:padding="8dp"
        android:src="@drawable/ic_lacetti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/littleCar"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/car"
        app:layout_constraintBottom_toBottomOf="@id/car"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="@string/easy_car"
        android:textColor="@color/realBlack"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/car"
        app:layout_constraintLeft_toRightOf="@id/car"
        app:layout_constraintTop_toTopOf="@id/car" />

</androidx.constraintlayout.widget.ConstraintLayout>